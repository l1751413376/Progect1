@{
    ViewBag.Title = "Index";
}

<style>
    li {
        list-style: none;
    }

    a {
        text-decoration: none;
    }
    ul {
        padding:0; margin:0;
    }
    .bord {
        border: 1px solid #ff0000;
    }

    #head {
        width: 100%;
    }

        #head .title {
            width: 100%;
            height: 152px;
        }

            #head .title .logo {
                height: 90px;
                width: 150px;
                float: left;
                margin-right: 30px;
            }

            #head .title .connet {
                width: 300px;
                height: 40px;
                float: left;
            }

        #head .items {
            width: 100%;
            height: 40px;
            background-color: #000000;
        }

            #head .items .item {
                width: 100px;
                font-size: 17px;
                color: #ffffff;
                height: 100%;
                float: left;
                line-height: 40px;
                text-align: center;
                cursor: pointer;
            }

                #head .items .item:hover {
                    background-color: #50b400;
                }

    #con {
        width: 100%;
    }

        #con .picts {
            width: 950px;
            height: 400px;
            position: relative;
            overflow: hidden;
        }

            #con .picts .pict {
                width: 2850px;
                height: 100%;
                position: relative;
                z-index: 1;
            }

                #con .picts .pict li {
                    z-index: 8;
                    float: left;
                    width: 950px;
                    height: 400px;
                    display: block;
                }
            #con .picts .pictNum3 {
                position: absolute;
                bottom: 20px;
                left: 30px;
                z-index:2;
            }

                #con .picts .pictNum3 li {
                    float: left;
                }

                    #con .picts .pictNum3 li a {
                        float: left;
                        width: 20px;
                        height: 20px;
                        background: #38415F;
                        color: #fff;
                        margin-right: 10px;
                        font-size: 12px;
                        text-align: center;
                        line-height: 20px;
                    }

                        #con .picts .pictNum3 li a:hover {
                            background-color: #50b400;
                        }
                        #con .picts .pictNum3 li .sel {
                            background-color: #50b400;
                        }

        #con .items {
            margin-top: 10px;
            width: 100%;
            height: 400px;
        }

            #con .items .item {
                float: left;
                width: 260px;
                margin: 0 25px;
            }

                #con .items .item .head {
                    float: left;
                    width: 100%;
                    clear: both;
                    height: 243px;
                }
</style>


<div id="head">
    <div class="title">
        <div style="width: 950px; margin: 0 auto;">
            <div class="logo">
                <img src="~/Content/img/di.jpg" /><img />
            </div>
        </div>
    </div>
    <div class="items">
        <div style="width: 950px; margin: 0 auto; height: 100%">
            <div class="item">首页</div>
            <div class="item">公司简介</div>
            <div class="item">产品中心</div>
            <div class="item">工程案例</div>
            <div class="item">在线留言</div>
            <div class="item">联系我们</div>
        </div>
    </div>

</div>
<div id="con">
    <div style="width: 950px; margin: 0 auto; height: 100%">
        <div class="picts">
            <ul class="pict" _i="1">
                <li>
                    <img src="~/Content/img/1-01.jpg" />
                </li>
                <li>
                    <img src="~/Content/img/1-02.jpg" /></li>
                <li>
                    <img src="~/Content/img/1-03.jpg" /></li>
            </ul>
            <ul class="pictNum3">
                <li _i="1"><a href="javascript:void(0)" class="sel">1</a></li>
                <li _i="2"><a href="javascript:void(0)">2</a></li>
                <li _i="3"><a href="javascript:void(0)">3</a></li>
            </ul>
        </div>
    </div>
    <div style="width: 950px; margin: 0 auto; height: 100%">
        <div class="items">
            <div class="item ">
                <div class="head">
                    <img src="~/Content/img/daohang260.jpg" />
                </div>
            </div>
            <div class="item ">
                <div class="head">
                    <img src="~/Content/img/daohang2.jpg" />
                </div>
            </div>
            <div class="item ">
                <div class="head">
                    <img src="~/Content/img/daohang%203.jpg" />
                </div>
            </div>
        </div>
    </div>
    <div id="companyIntro">
        <div>
            <div>公司介绍</div>
            <div>ABOUT US</div>
        </div>
        <div></div>
    </div>
</div>
@section scripts{
<script>
    var page;
    $(function () {
        //define
        page = {
            $picts: $("ul.pict > li"),
            $pictsul: $("ul.pict"),
            $fpictsshow: null,//轮播函数
            $fpictsclick: null,//轮播点击函数
            $pictsbtn: $("ul.pictNum3 > li"),
            $fpictschange: null,
            $fpictsevent:null,
        };
        //
        page.$funpictsshow = function () {
            setInterval(page.fpictsevent, 4000);
        }
        page.fpictsevent=function(){
            var i = page.$pictsul.attr("_i");
            i++;
            if (i > 3) i = 1;
            page.$pictsul.attr("_i", i);
            page.$fpictschange(page.$pictsbtn[i - 1]);
        }
        page.$fpictsclick = function () {
            this.$pictsbtn.click(function () {
                page.$fpictschange(this);
                page.$pictsul.attr("_i", $(this).attr("_i"));
            });
        }
        page.$fpictschange = function (sender){
            var item = $(sender);
            var i = item.attr("_i");
            $("a",page.$pictsbtn).removeClass("sel");
            $("a",page.$pictsbtn[i - 1]).addClass("sel");
            page.$pictsul.animate({left:'-'+(i-1)*950+'px'});
        }

        page.$fpictsclick();
        page.$funpictsshow();
    });
    
</script>
}
